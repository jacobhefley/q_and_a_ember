{{#if updateQuestionForm}}
  <h4>Update {{question.content}}'s {{question.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="content">content</label>
          {{input value=content id="content" placeholder=question.content}}
        </div>

        <div class="form-group">
          <label for="author">author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="notes">Number of notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
